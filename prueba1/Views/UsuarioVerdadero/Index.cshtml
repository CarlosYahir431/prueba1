@model IEnumerable<VelazquezYahir.Models.Domain.Book>

@{
    ViewData["Title"] = "Libros Actuales";
    Layout = "_layoutdashboard";
}

<div class="container py-5">
    <h1 class="mb-4 text-center text-primary fw-bold">Libros Actuales</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden card-hover">
                    <img src="@item.Img" alt="@item.Titulo" class="card-img-top img-fluid" style="height: 220px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark fw-bold">@item.Titulo</h5>
                        <p class="text-muted small"><i class="fas fa-user me-2 text-primary"></i>@item.Autor</p>
                        <a asp-action="Details" asp-route-id="@item.PkBook" class="btn btn-outline-primary mt-auto d-flex align-items-center justify-content-center">
                            <i class="fas fa-eye me-2"></i> Ver detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card-hover:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #fff;
        }
</style>
