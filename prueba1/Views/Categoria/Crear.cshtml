@model VelazquezYahir.Models.Domain.Categoria
@{
    ViewData["Title"] = "Crear Categoría";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 ">
            <div class="card shadow-sm border border-gray">
                <div class="card-header bg-white">
                    <h4 class="mb-0">Crear Nueva Categoría</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Crear">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre de la categoría" autofocus />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="d-flex mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary ms-auto">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
