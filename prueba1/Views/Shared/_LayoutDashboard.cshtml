<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] VelazquezYahir</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/VelazquezYahir.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	<style>
		:root {
			--sidebar-width: 250px;
			--sidebar-width-collapsed: 70px;
			--transition-speed: 0.5s;
		}

		body {
			font-family: 'Arial', sans-serif;
			background-color: #f8f9fa;
			color: #2c3e50;
			transition: background-color 0.3s ease;
			overflow-x: hidden;
		}

		.wrapper {
			display: flex;
			width: 100%;
			align-items: stretch;
		}

		.sidebar {
			min-height: 100vh;
			width: var(--sidebar-width);
			position: fixed;
			top: 0;
			left: 0;
			background-color: #2c3e50;
			transition: all var(--transition-speed) ease;
			z-index: 999;
			box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
		}

		.sidebar.collapsed {
			width: var(--sidebar-width-collapsed);
		}

		.sidebar .sidebar-header {
			padding: 20px;
			background-color: #1a2530;
			text-align: center;
			border-bottom: 1px solid #34495e;
			display: flex;
			justify-content: space-between;
			align-items: center;
		}

		.sidebar .sidebar-header h3 {
			color: #ecf0f1;
			margin: 0;
			font-size: 1.5rem;
			font-weight: 600;
			transition: opacity var(--transition-speed) ease;
		}

		.sidebar.collapsed .sidebar-header h3 {
			opacity: 0;
			display: none;
		}

		.sidebar-nav {
			padding: 0;
		}

		.sidebar-nav a {
			padding: 15px 20px;
			display: flex;
			align-items: center;
			text-decoration: none;
			color: #bdc3c7;
			transition: all var(--transition-speed) ease;
			white-space: nowrap;
		}

		.sidebar-nav a:hover {
			background-color: #34495e;
			color: #ecf0f1;
		}

		.sidebar-nav a i {
			margin-right: 15px;
			min-width: 20px;
			text-align: center;
			font-size: 1.2rem;
		}

		.sidebar.collapsed .sidebar-nav a span {
			opacity: 0;
			display: none;
		}

		.toggle-btn {
			background: transparent;
			border: none;
			color: #ecf0f1;
			font-size: 1.5rem;
			cursor: pointer;
			transition: transform var(--transition-speed) ease;
		}

		.sidebar.collapsed .toggle-btn {
			transform: rotate(180deg);
		}

		.content {
			width: calc(100% - var(--sidebar-width));
			margin-left: var(--sidebar-width);
			padding: 30px;
			min-height: 100vh;
			transition: all var(--transition-speed) ease;
		}

		.content.expanded {
			width: calc(100% - var(--sidebar-width-collapsed));
			margin-left: var(--sidebar-width-collapsed);
		}

		@@media (max-width: 768px) {
			.sidebar {
				width: var(--sidebar-width-collapsed);
				position: fixed;
			}

			.sidebar.expanded {
				width: var(--sidebar-width);
			}

			.sidebar .sidebar-header h3,
			.sidebar .sidebar-nav a span {
				opacity: 0;
				display: none;
			}

			.sidebar.expanded .sidebar-header h3,
			.sidebar.expanded .sidebar-nav a span {
				opacity: 1;
				display: block;
			}

			.content {
				width: calc(100% - var(--sidebar-width-collapsed));
				margin-left: var(--sidebar-width-collapsed);
			}

			.content.collapsed {
				width: calc(100% - var(--sidebar-width));
				margin-left: var(--sidebar-width);
			}
		}

		/* Estilos adicionales */
		h2 {
			font-size: 1.8rem;
			font-weight: 600;
			margin-bottom: 1.5rem;
			color: #2c3e50;
		}

		.btn-primary {
			background-color: #3498db;
			border: none;
			padding: 10px 20px;
			font-size: 1rem;
			transition: background-color 0.3s ease;
		}

		.btn-primary:hover {
			background-color: #2980b9;
		}

		.card {
			border: none;
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			margin-bottom: 20px;
		}

		/* Transiciones suaves para los elementos de la tabla */
		.table {
			transition: all 0.3s ease;
		}

		/* Mejoras visuales para botones en la tabla */
		.btn {
			border-radius: 5px;
			transition: all 0.2s ease;
		}

		.btn-success {
			background-color: #27ae60;
			border-color: #27ae60;
		}

		.btn-success:hover {
			background-color: #2ecc71;
			border-color: #2ecc71;
		}

		.btn-danger {
			background-color: #e74c3c;
			border-color: #e74c3c;
		}

		.btn-danger:hover {
			background-color: #c0392b;
			border-color: #c0392b;
		}

		/* Mejoras para formularios */
		.form-control {
			border-radius: 5px;
			border: 1px solid #ddd;
			padding: 10px;
			transition: border-color 0.3s ease, box-shadow 0.3s ease;
		}

		.form-control:focus {
			border-color: #3498db;
			box-shadow: 0 0 5px rgba(52, 152, 219, 0.5);
		}

		.form-group {
			margin-bottom: 20px;
		}
	</style>
</head>
<body>
	<div class="wrapper">
		<!-- Sidebar -->
		<nav id="sidebar" class="sidebar">
			<div class="sidebar-header">
				<h3>Biblioteca</h3>
				<button type="button" id="sidebarCollapse" class="toggle-btn">
					<i class="fas fa-chevron-left"></i>
				</button>
			</div>

			<div class="sidebar-nav">

				<a asp-controller="User" asp-action="Index"><i class="bi bi-house"></i><span>Usuarios</span></a>
				<a asp-controller="Book" asp-action="Index"><i class="bi bi-book"></i><span>Libros</span></a>
				<a asp-controller="Categoria" asp-action="Index"><i class="bi bi-tag"></i><span>Categorias</span></a>
				<a asp-controller="Comentario" asp-action="Index"><i class="bi bi-chat"></i><span>Comentarios</span></a>
				<a asp-controller="Authv" asp-action="Login"><i class="bi bi-box-arrow-in-right"></i><span>Login</span></a>
				<a asp-controller="Authv" asp-action="Register"><i class="bi bi-person-plus"></i><span>Register</span></a>

			</div>
		</nav>

		<!-- Page Content -->
		<div id="content" class="content">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
	
	<script>
		$(document).ready(function () {
			$('#sidebarCollapse').on('click', function () {
				$('#sidebar').toggleClass('collapsed');
				$('#content').toggleClass('expanded');
			});

			// Para dispositivos móviles
			if ($(window).width() <= 768) {
				$('#sidebar').addClass('collapsed');
				$('#content').addClass('expanded');
			}

			// Ajustar al cambiar el tamaño de la ventana
			$(window).resize(function() {
				if ($(window).width() <= 768) {
					$('#sidebar').addClass('collapsed');
					$('#content').addClass('expanded');
				}
			});
		});
	</script>
	
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>