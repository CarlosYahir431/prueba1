<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VelazquezYahir</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VelazquezYahir.styles.css" asp-append-version="true" />
    <style>
        /* Estilos minimalistas para el sidebar */
        .sidebar {
            height: 100vh;
            width: 200px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: black; /* Fondo claro */
            padding-top: 20px;
            border-right: 1px solid #e9ecef; /* Borde sutil */
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                display: block;
                transition: background-color 0.2s ease;
            }

                .sidebar a:hover {
                    background-color: #e9ecef; /* Fondo al hacer hover */
                    color:black
                }

        .content {
            margin-left: 200px;
            padding: 20px;
        }

        /* Estilos minimalistas para el contenido */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #fff;
            color: #333;
        }

        h2 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: ;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2 class="p-3">Menu</h2>
        <nav class="flex-column">
            <a href="#" class="nav-link"><i class="bi bi-house"></i>Inicio</a>
            <a href="#" class="nav-link">Libros</a>
            <a href="#" class="nav-link">Acerca de nosotros</a>
        </nav>
    </div>

    <!-- Contenido principal -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>