<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] VelazquezYahir</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/VelazquezYahir.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

	<style>
		.sidebar {
			height: 100vh;
			width: 250px;
			position: fixed;
			top: 0;
			left: 0;
			background-color: #2c3e50;
			padding-top: 20px;
			box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
		}

			.sidebar h2 {
				color: #ecf0f1;
				font-size: 1.5rem;
				font-weight: 600;
				padding: 20px;
				margin: 0;
				text-align: center;
				border-bottom: 1px solid #34495e;
			}

			.sidebar a {
				padding: 12px 20px;
				text-decoration: none;
				display: block;
				color: #bdc3c7;
				transition: background-color 0.3s ease, color 0.3s ease;
			}

				.sidebar a:hover {
					background-color: #34495e;
					color: #ecf0f1;
				}

				.sidebar a i {
					margin-right: 10px;
				}

		.content {
			margin-left: 250px;
			padding: 40px;
			background-color: #ecf0f1;
		}

		body {
			font-family: 'Arial', sans-serif;
			background-color: #fff;
			color: #2c3e50;
		}

		h2 {
			font-size: 1.8rem;
			font-weight: 600;
			margin-bottom: 1.5rem;
			color: #2c3e50;
		}

		.nav-link {
			font-size: 1rem;
		}

		.btn-primary {
			background-color: #3498db;
			border: none;
			padding: 10px 20px;
			font-size: 1rem;
			transition: background-color 0.3s ease;
		}

			.btn-primary:hover {
				background-color: #2980b9;
			}

		.card {
			border: none;
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		}
	</style>

</head>
<body>
	<div class="sidebar">
		<h2>Biblioteca</h2>
		<nav class="flex-column">
			<a asp-controller="User" asp-action="Index"><i class="bi bi-house"></i>Usuarios</a>
			<a asp-controller="Book" asp-action="Index" class="nav-link"><i class="bi bi-book"></i>Libros</a>
			<a asp-controller="Categoria" asp-action="Index" class="nav-link"><i class="bi bi-info-circle"></i>Categorias</a>
		</nav>
	</div>

	<div class="content">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
@section Scripts {


}
</html>